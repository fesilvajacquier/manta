<div class="offer-pictures">
  <ul class="nav nav-pills mb-3 d-flex" id="pills-tab" role="tablist">
    <li class="nav-item offer-pub-tabbe messages-tabs-color">
      <a class="nav-link active d-flex justify-content-between align-items-center w-100 h-100" id="pills-pub-details-tab" data-toggle="pill" href="#pills-pub-details" role="tab" aria-controls="pills-pub-details" aria-selected="true">Pub details</a>
    </li>
    <li class="nav-item offer-pub-tabbe d-flex justify-content-center align-items-center messages-tabs-color">
      <a class="nav-link d-flex justify-content-between align-items-center w-100 h-100" id="pills-offer-pictures-tab" class="pills-offer-pictures-tab d-flex justify-content-center align-items-center" style="height: 100%; flex-grow: 1;display: flex !important; justify-content: center !important; align-items: center;" data-toggle="pill" href="#pills-offer-pictures" role="tab" aria-controls="pills-offer-pictures" aria-selected="false">Offer pictures</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-pub-details" role="tabpanel" aria-labelledby="pills-pub-details-tab">
      <div class="text-center px-3">
        <h4 class="mt-2 publication-title"><%= link_to @offer.publication.title, publication_path(@offer.publication) %></h4>
        <span class="ngo-name">posted by <br><strong><%= @offer.publication.ngo.name %></strong></span>
        <p class ="ngo-publication-description mt-5 mb-5"><%= @offer.publication.description %></p>
        <h4 class= "chat-publication-link"><%= link_to "Go back to publication", publication_path(@offer.publication) %></h4>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-offer-pictures" role="tabpanel" aria-labelledby="pills-offer-pictures-tab">
      <div class="text-center">
        <div class="mb-3">
          <% if @offer.pictures.empty? %>
            <p>This offer has no pictures yet!</p>
          <% else %>
            <div id="carouselExampleControls" class="carousel slide mb-5" data-ride="carousel">
              <div class="carousel-inner">
                <% @offer.pictures.each_with_index do |pic, i| %>
                <% if i == 0 %>
                  <div class="carousel-item active">
                <% else %>
                  <div class="carousel-item">
                <% end %>
                    <%= cl_image_tag pic.picture, width: 300, height: 365, crop: 'fit', class: "d-block" %>
                  </div>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          <% end %>
        </div>
        <%= simple_form_for @picture do |pf| %>
          <%= pf.input :picture,label: 'Pick a pic!', as: :file %>
          <%= pf.input :imageable_id, as: :hidden, input_html: { value: @offer.id } %>
          <%= pf.input :imageable_type, as: :hidden, input_html: { value: @offer.class } %>
          <%= pf.submit 'Upload the pic', class: "chat-publication-link"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
