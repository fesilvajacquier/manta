<div class="container new-ngo-wrapper">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-6 sign-in-form-style">
        <h2 class="text-center ngo-form-heading"><strong><span class="ngo-form-title">Log In</span></strong></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        input_html: {class:"input_field"} %>
            <%= f.input :password,
                        required: false,
                        input_html: {
                          autocomplete: "current-password"
                        },
                        input_html: {class:"input_field"} %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"button btn-primary my-2" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
   </div>
</div>
