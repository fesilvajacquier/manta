<%= simple_form_for [:admin, ngo, publication] do |f| %>
 <%= f.error_notification %>
 <%= f.input :title, placeholder: "10 chairs", input_html: {class:"input_field"}%>
 <%= f.input :location, label: "Location", input_html: { id: 'ngo_address', class:'input_field'}, placeholder: "1 Devonshire St, London W1W 5DR" %>
 <%= f.input :description, label: "Description", placeholder: "We need 10 chairs for donating to school",input_html: {class:"input_field"} %>
  <%= f.input :intended_use, label: "Intended Use", placeholder: "Intended Use",input_html: {class:"input_field"} %>
  <%= f.input :category_id,
    as: :grouped_select,
    collection: categories,
    group_method: :children,
    input_html: {class:"input_field"}%>
 <%= f.simple_fields_for :pictures do |pf| %>
   <%= pf.input :picture, as: :file, required: false %>
   <%= pf.input :picture_cache, as: :hidden %>
   <%= pf.input :imageable_id, as: :hidden %>
   <%= pf.input :imageable_type, as: :hidden %>
 <% end %>
 <%= f.button :submit, class: "button"%>
<% end %>
