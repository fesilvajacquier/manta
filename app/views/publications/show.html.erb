<%= content_for(:meta_og) do %>
  <meta property="og:title" content="<%= @publication.title %>" />
  <meta property="og:type" content="article" />
  <%# <meta property="og:published_time" content="<%= @publication.publication_date.strftime('%Y-%m-%d %H:%M') %>" /> %>
  <%# TODO add manta web as author %>
  <%# <meta property="og:author" content="https://www.facebook.com/iedamarcondes" /> %>
  <meta property="og:description" content="<%= truncate(@publication.description, length: 50) %>" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <% if @publication.ngo.pictures.first.present? %>
      <%= tag :meta, property: 'og:image', content: "#{cl_image_path(@publication.ngo.pictures.first.picture)}" %>
      <%= tag :meta, name: 'twitter:image:src', content: "#{cl_image_path(@publication.ngo.pictures.first.picture)}" %>
  <% end %>
  <meta name="twitter:card" content="summary_large_image">
  <%# TODO add manta web %>
  <%# <meta name="twitter:site" content="iedamarcondes.com"> %>
  <%# TODO add twitter account %>
  <%# <meta name="twitter:creator" content="@iedamarcondes"> %>
  <meta name="twitter:title" content="<%= @publication.title %>" />
  <meta name="twitter:site" content="<%= @publication.ngo.name %>" />
  <meta name="twitter:description" content="<%= truncate(@publication.description, length: 100) %>" />
<% end %>


<div class="container py-5">
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <div class="mb-3" style="width: 300px; height: 365px; border: 2px black solid;">
        Carrousel placeholder
      </div>
      <div
        id="map"
        style="width: 300px; height: 300px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
    <div class="col-sm-12 col-md-8 py-4">
      <div class="d-flex justify-content-between align-items-center pb-3">
        <h2> <%= @publication.title %> </h2>
        <%= social_share_button_tag(@publication.title, desc: @publication.description) %>
        <%# <a href="#" class="btn btn-success">Share on SM</a> %>
      </div>
      <p>posted by <strong><%= link_to @publication.ngo.name, ngo_path(@publication.ngo)  %></strong></p>
      <p><strong>Location: <%= @publication.location %></strong></p>
      <h3 class="sub-header">Description</h3>
      <p class="pb-3">
        <%= @publication.description %>
      </p>
      <h3 class="sub-header">Intended use</h3>
      <p class="pb-3">
        <%= @publication.intended_use %>
      </p>
      <h3 class="sub-header">Main focus</h3>
      <p class="pb-3">
        Main focus place holder
      </p>
      <% if @publication.closing_text %>
        <h3 class="sub-header">Closing</h3>
        <div class="d-flex">
          <%= cl_image_tag Picture.find_by(imageable_type: @publication.class.to_s, imageable_id: @publication.id, category: 'closing').picture, width: 400, height: 300, crop: :fit %>
          <div>
            <h5>Closing evidence description</h5>
            <p>
              <%= @publication.closing_text %>
            </p>
          </div>
        </div>
      <% end %>
      <% if @publication.ngo.is_stakeholder?(current_user) %>
        <div class="report-ngo-button">
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#closingModal-<%= @publication.id%>">
            Upload evidence
          </button>
        </div>
        <%= render 'publications/closing_form', publication: @publication, picture: @picture %>
      <% else %>
        <div class="report-ngo-button">
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#offerModal">
            I can help!
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'offer_modal' %>
